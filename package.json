{
  "name": "storybook-code-coverage",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/helper-call-delegate": "^7.12.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.0",
    "start-server-and-test": "^1.11.5",
    "styled-components": "^5.2.1"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "test:integration": "cypress run",
    "coverage:clean": "rm -rf .nyc_output && rm -rf coverage",
    "coverage:integration": "start-server-and-test 3000 test:integration"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.test.js",
      "!**/test.js",
      "!**/*.stories.js",
      "!**/stories.js"
    ]
  },
  "nyc": {
    "report-dir": "coverage/integration",
    "reporter": [
      "text",
      "json",
      "lcov"
    ],
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test.js",
      "**/*.stories.js",
      "**/stories.js",
      "src/setupTests.js"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.8.3",
    "@cypress/instrument-cra": "^1.4.0",
    "cypress": "^5.6.0"
  }
}
